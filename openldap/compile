#!/bin/sh -eux

ub_compile \
	--libexecdir=/usr/sbin \
	--enable-syslog \
	--enable-dynamic \
	--enable-ipv6 \
	--enable-local \
	\
	--enable-slapd \
	--enable-slp \
	--enable-cleartext \
	--enable-crypt \
	--enable-spasswd \
	--enable-rlookups \
	\
	--enable-backends=mod \
	--enable-mdb \
	--enable-modules \
	--enable-perl \
	\
	--enable-overlays=mod \
	\
	--disable-wt \
	--without-fetch

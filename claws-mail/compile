#!/bin/sh -eux

if [ ! -f version ]; then
	echo "echo $UB_VERSION" > version
fi

# NOCONFIGURE=1 ./autogen.sh

ub_compile \
    --enable-crash-dialog \
    --disable-alternate-addressbook \
    --disable-gtk3 \
    --disable-ldap \
    --disable-jpilot \
    --disable-bsfilter-plugin

# ub_make -C po claws-mail.pot update-po

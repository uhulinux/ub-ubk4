+					pos += 2;
+				} else if(txt.substr(pos, 2) == _t("^="))
+				{
+					attribute.condition = select_start_str;
+					pos += 2;
+				} else if(txt.substr(pos, 2) == _t("$="))
+				{
+					attribute.condition = select_end_str;

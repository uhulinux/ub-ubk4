+						attribute.val = txt.substr(pos, pos2 == tstring::npos ? pos2 : (pos2 - pos));
+						trim(attribute.val);
+						pos = pos2 == tstring::npos ? pos2 : (pos2 + 1);
+					}
+				}
+			} else
+			{
+				attribute.condition = select_exists;
+			}
+			attribute.attribute	= attr;
+			m_attrs.push_back(attribute);
+			el_end = pos;
+		} else
+		{
+			el_end++;
+		}

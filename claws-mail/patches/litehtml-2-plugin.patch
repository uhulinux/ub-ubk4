+    if(m_cursor == _t("pointer"))
+    {
+        cursType = GDK_HAND2;
+    }
+    if(cursType == GDK_ARROW)
+    {
+        gdk_window_set_cursor(gtk_widget_get_window(m_drawing_area), NULL);

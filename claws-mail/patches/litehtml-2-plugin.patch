+		{
+			tstring fnc;
+			tstring::size_type i = 0;
+			while(i < content.length() && i != tstring::npos)
+			{
+				if(content.at(i) == _t('"'))
+				{
+					fnc.clear();
+					i++;
+					tstring::size_type pos = content.find(_t('"'), i);
+					tstring txt;
+					if(pos == tstring::npos)
+					{
+						txt = content.substr(i);
+						i = tstring::npos;
+					} else
+					{
+						txt = content.substr(i, pos - i);
+						i = pos + 1;
+					}
+					add_text(txt);
+				} else if(content.at(i) == _t('('))
+				{
+					i++;
+					litehtml::trim(fnc);
+					litehtml::lcase(fnc);
+					tstring::size_type pos = content.find(_t(')'), i);
+					tstring params;
+					if(pos == tstring::npos)
+					{
+						params = content.substr(i);
+						i = tstring::npos;
+					} else
+					{
+						params = content.substr(i, pos - i);
+						i = pos + 1;
+					}
+					add_function(fnc, params);
+					fnc.clear();
+				} else
+				{
+					fnc += content.at(i);
+					i++;
+				}
+			}
+		}
+	}

+	if(!el)	return false;
+	if(!t_strcmp(el->get_tagName(), _t("tbody")) || !t_strcmp(el->get_tagName(), _t("thead")) || !t_strcmp(el->get_tagName(), _t("tfoot")))
+	{
+		return html_tag::appendChild(el);
+	}
+	return false;
+}

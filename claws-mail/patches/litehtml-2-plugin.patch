+		g_clear_error(&error);
+		return;
+	} else {
+		utf8 = get_utf8_string(contents);
+		g_free(contents);
+	}
+
+	g_free(msgfile);
+
+	lh_widget_open_html(viewer->widget, utf8);
+	g_free(utf8);

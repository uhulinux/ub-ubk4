#!/bin/sh -eux

ub_compile \
	-DCPU_BASELINE_DISABLE=SSE \
	-DCPU_BASELINE_DISABLE=SSE2 \
	-DCPU_BASELINE_DISABLE=SSE3 \
	-DCPU_BASELINE_DISABLE=SSSE3 \
	-DCPU_BASELINE_DISABLE=SSE41 \
	-DCPU_BASELINE_DISABLE=SSE42 \
	-DOpenGL_GL_PREFERENCE=GLVND \
	-DOPENCV_EXTRA_MODULES_PATH="$UB_COMPILEDIR/opencv-contrib/modules" \
	-DOPENCV_DOC_INSTALL_PATH=/usr/share/doc/OpenCV \
	-DENABLE_FAST_MATH=OFF \
	-DENABLE_PROFILING=OFF \
	-DBUILD_PACKAGE=OFF \
	-DBUILD_ANDROID_EXAMPLES=OFF \
	-DBUILD_DOCS=ON \
	-DBUILD_PERF_TESTS=OFF \
	-DBUILD_SHARED_LIBS=ON \
	-DBUILD_TESTS=OFF \
	-DBUILD_WITH_DEBUG_INFO=OFF \
	-DWITH_CLP=OFF \
	-DWITH_CUBLAS=OFF \
	-DWITH_CUDA=OFF \
	-DWITH_CUFFT=OFF \
	-DWITH_GIGEAPI=OFF \
	-DWITH_GTK_2_X=OFF \
	-DWITH_NVCUVID=OFF \
	-DWITH_OPENCL=ON \
	-DWITH_OPENEXR=OFF \
	-DWITH_OPENGL=ON \
	-DWITH_PVAPI=OFF \
	-DWITH_QT=5 \
	-DWITH_TBB=ON \
	-DWITH_UNICAP=OFF \
	-DWITH_VFW=OFF \
	-DWITH_WIN32UI=OFF \
	-DWITH_XINE=ON \
	-DCMAKE_PREFIX_PATH=/usr/lib/qt5

#!/bin/sh -eux

./autogen.sh
./configure \
	--prefix=/usr \
	--enable-ethernet \
	--disable-external-ffmpeg \
	--enable-lame \
	--disable-static-lame \
	--sysconfdir=/etc \
	--localstatedir=/var \
	--mandir=/usr/share/man \
	--infodir=/usr/share/info \
	--libdir=/usr/lib \
	--enable-x64 \
	--disable-optimization \
	--disable-pdf-docs
ub_make

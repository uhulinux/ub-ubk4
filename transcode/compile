#!/bin/sh -eux

ub_compile \
    --disable-ffmpeg \
    --enable-freetype2 \
    --enable-ogg \
    --enable-vorbis \
    --enable-theora \
    --enable-libdv \
    --enable-libxml2 \
    --enable-libv4l2 \
    --enable-xvid \
    --enable-x264 \
    --enable-alsa \
    --enable-sdl \
    --enable-lzo \
    --enable-libmpeg2 \
    --enable-libmpeg2convert \
    --enable-faac \
    --enable-a52 \
    --enable-mjpegtools \
